{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "outDir": "build",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": false,
        "target": "es2015",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@resin.io"
        ],
        "allowJs": true,
        "importHelpers": true
    },
    "include": [
        "typings/*.d.ts",
        "tests/typings/*.d.ts",
        "lib/**/*",
    ]
}
